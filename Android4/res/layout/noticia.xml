<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txvTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Tipo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#3E7FD0" />

    <TextView
        android:id="@+id/txvDescripcionNotica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txvTipo"
        android:layout_below="@+id/txvTipo"
        android:text="Descripcion"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/sepNoticias"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txvDescripcionNotica"
        android:background="#3E7FD0" />

    <TextView
        android:id="@+id/txvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Fecha"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>